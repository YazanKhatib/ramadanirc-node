{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "utils": ["utils"],
      "routes": ["routes"],
      "models": ["models"],
      "controllers": ["controllers"],
      "database": ["database"],
      "middleware": ["middleware"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
