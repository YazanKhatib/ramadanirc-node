{
  "name": "backend-node",
  "version": "1.0.0",
  "description": "Ramadan App backend nodejs application",
  "main": "app.ts",
  "scripts": {
    "start": "node dist/src/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc -p .",
    "migrate": "knex --knexfile=src/knexfile.ts migrate:latest",
    "down": "knex --knexfile=src/knexfile.ts migrate:down",
    "seed": "knex --knexfile=src/knexfile.ts seed:run",
    "rollback": "knex --knexfile=src/knexfile.ts migrate:rollback",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "_moduleAliases": {
    "utils": "src/utils",
    "routes": "src/routes",
    "models": "src/models",
    "controllers": "src/controllers",
    "database": "src/database",
    "middleware": "src/middleware"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/ramadan-irc/backend-node.git"
  },
  "author": "Zain Khatib",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/ramadan-irc/backend-node/issues"
  },
  "homepage": "https://gitlab.com/ramadan-irc/backend-node#readme",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/nodemailer": "^6.4.0",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.5.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.17",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "nodemailer": "^6.4.17",
    "objection": "^2.2.14",
    "pg": "^8.5.1",
    "postgres": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "maildev": "^1.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  }
}
